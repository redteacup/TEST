<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:id="@+id/main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下单"
            android:id="@+id/orderButton"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="订单管理"
            android:id="@+id/orderManager"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="12dp"
            android:textAlignment="center" />

        <Button
             android:id="@+id/btnGHJ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="订单筛选" 
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="12dp"
            android:textAlignment="center" />

         <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_daddress_setting"
            android:id="@+id/Daddress_set_button"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="12dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_order_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textSize="16sp"
            android:onClick="OnClickOrderDetail"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入商品名"
            android:id="@+id/goodButton"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示公告"
            android:id="@+id/noticeButton"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>
     </LinearLayout>
</RelativeLayout>
